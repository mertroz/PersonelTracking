@model UserViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Yeni Kullanıcı Ekleme</h1>

<div class="row">
    <div class="col-12 col-xl-8">
        @if (TempData.ContainsKey("ResultMessage"))
        {
            <div class="alert alert-danger ">
                @TempData["ResultMessage"]
            </div>
        }
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="card card-body border-0 shadow mb-4">
                    <h2 class="h5 mb-4">Kullanıcı Bilgileri</h2>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="UserName" class="control-label"></label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Employees" class="control-label"></label>
                            <select asp-for="EmployeeId" class="form-select"
                                    asp-items="@(new SelectList(Model.Employees, "Id", "FullName"))">
                                <option>Please select one</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Roles" class="control-label"></label>
                            <select asp-for="RoleId" class="form-select"
                                    asp-items="@(new SelectList(Model.Roles, "Id", "Name"))">
                                <option>Please select one</option>
                            </select>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-gray-800 mt-2 animate-up-2" type="submit">Kaydet</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

