@model PersonnelTrackingSystem.WebApp.Models.ShiftViewModel

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Yeni Mesai Ekleme</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="card card-body border-0 shadow mb-4">
                    <div class="row">
                        <div class="form-group">
                            <label asp-for="Employees" class="control-label">Personel Bilgisi</label>
                            <select asp-for="EmployeeId" class="form-select" required
                                    asp-items="@(new SelectList(Model.Employees, "Id", "FullName"))">
                                <option value="">Seçiniz</option>
                            </select>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="WorkingDate" class="control-label">Mesai Başlangıç Tarihi</label>
                                <input asp-for="WorkingDate" class="form-control" required />
                                <span asp-validation-for="WorkingDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="WorkingTime" class="control-label">Mesai Süresi</label>
                                <input asp-for="WorkingTime" class="form-control" type="time" min="00:00" max="23:59" required />
                                <span asp-validation-for="WorkingTime" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="mt-3">
                        <button class="btn btn-gray-800 mt-2 animate-up-2" type="submit">Kaydet</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


<hr />

<div class="row">
    <div class="form-group">
        <a class="btn btn-light btn-primary" asp-action="Index">Listeye Geri Dön</a>
    </div>
</div>
