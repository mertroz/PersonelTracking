@model PersonnelTrackingSystem.WebApp.Models.SalaryPaymentViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>Personel Maaş Girişi</h4>
<hr />
<div class="row">
    <div class="col-12 col-xl-8">
        @if (TempData.ContainsKey("ResultMessage"))
        {
            <div class="alert alert-danger ">
                @TempData["ResultMessage"]
            </div>
        }
        <div class="form-group">
            <div class="card card-body border-0 shadow mb-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Employees" class="control-label">Personel Bilgisi</label>
                            <select asp-for="EmployeeId" class="form-select" required
                                    asp-items="@(new SelectList(Model.Employees, "Id", "FullName"))">
                                <option value=0>Seçiniz</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Month" class="control-label">Ay</label>
                            <span asp-validation-for="Month" class="text-danger"></span>
                            <select asp-for="Month" class="form-select mb-0" required>
                                <option selected value="">Seçiniz</option>
                                <option value="1">Ocak</option>
                                <option value="2">Şubat</option>
                                <option value="3">Mart</option>
                                <option value="4">Nisan</option>
                                <option value="5">Mayıs</option>
                                <option value="6">Haziran</option>
                                <option value="7">Temmuz</option>
                                <option value="8">Ağustos</option>
                                <option value="9">Eylül</option>
                                <option value="10">Ekim</option>
                                <option value="11">Kasım</option>
                                <option value="12">Aralık</option>
                            </select>

                        </div>

                    </div>
                    @{
                        var thisYear = DateTime.Now.Year;
                        var endYear = thisYear + 10;
                        var yearList = Enumerable.Range(thisYear, 11).ToList();
                    }
                    <div class="row">
                        <div class="col-md-6 mb-3">

                            <label asp-for="Year" class="control-label"></label>
                            <select asp-for="Year" class="form-select mb-0" required>
                                <option selected value="">Seçiniz</option>
                                @foreach (var year in yearList)
                                {
                                    <option value="@year">@year</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">

                            <label asp-for="Paid" class="control-label">Ödendi</label>
                            <input class="form-check-input" asp-for="Paid" />
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Kaydet" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<hr />

<div class="row">
    <div class="form-group">
        <a class="btn btn-light btn-primary" asp-action="Index">Listeye Geri Dön</a>
    </div>
</div>


