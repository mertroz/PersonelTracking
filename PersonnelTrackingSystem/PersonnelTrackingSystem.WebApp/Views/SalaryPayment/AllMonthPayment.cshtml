@model PersonnelTrackingSystem.WebApp.Models.SalaryPaymentSaveModel

@{
    ViewData["Title"] = "AllMonthPayment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AllMonthPayment</h1>

<h4>SalaryPaymentSaveModel</h4>
<hr />
<div class="float-start col-4">
    @if (TempData.ContainsKey("ResultMessage"))
    {
        <div class="alert alert-success">
            @TempData["ResultMessage"]
        </div>
    }
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AllMonthPayment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Month" class="control-label"></label>
                <input asp-for="Month" class="form-control" />
                <span asp-validation-for="Month" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

